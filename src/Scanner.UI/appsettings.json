{
  "ScannerConfiguration": {
    "Camera": {
      "DefaultDepthMode": "NFOV_Unbinned",
      "DefaultColorResolution": "R1080p",
      "DefaultFrameRate": "FPS30",
      "AutoConnect": true,
      "DeviceIndex": 0
    },
    "Scanning": {
      "DefaultFramesToCapture": 100,
      "DefaultMaxDepth": 3.0,
      "DefaultMinDepth": 0.3,
      "DefaultVoxelSize": 0.005,
      "DefaultBackgroundRemovalFrames": 30,
      "EnableBackgroundRemovalByDefault": true,
      "EnableNoiseReductionByDefault": true,
      "EnableDepthFilteringByDefault": true
    },
    "Processing": {
      "DefaultMaxEdgeLength": 0.1,
      "DefaultSmoothingIterations": 3,
      "DefaultSmoothingLambda": 0.5,
      "DefaultSimplificationRatio": 0.5,
      "EnableICPAlignment": true,
      "MaxICPIterations": 20
    },
    "Export": {
      "DefaultFormat": ".stl",
      "DefaultOutputDirectory": "exports",
      "UseBinaryFormatByDefault": true,
      "IncludeMetadata": true,
      "CreateTimestampedFolders": true
    },
    "UI": {
      "Theme": "Light",
      "PrimaryColor": "Blue",
      "SecondaryColor": "Cyan",
      "ShowAdvancedOptions": false,
      "AutoSaveScans": true,
      "MaxRecentScans": 10
    },
    "Performance": {
      "MaxPointsPerFrame": 100000,
      "EnableMultithreading": true,
      "ProcessingThreads": 0,
      "UseHardwareAcceleration": true,
      "MaxMemoryUsageMB": 2048
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "KinectCore": "Debug",
      "Scanner.UI": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/scanner-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}
